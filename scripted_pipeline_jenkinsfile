node {
  stage('step-1') {  
  docker.image('shahabajsshaikh/openjdk8:0.0').withRun {c ->
    sh 'ls -la'
    sh 'pwd'
  }
}
stage('step-2') {  
  docker.image('httpd').inside {
    sh 'ls -la'
  }
}
stage('step-3') {  
  def maven = docker.image('httpd')
  maven.pull()
  maven.inside {
    sh 'pwd & ls -la'
  }
}

stage('step-4') {  
  def img = docker.build 'test:1'
  img.inside {
    sh 'pwd & ls -la'
  }
}


}
